@model List<DATA.Domains.AccountHolderType>

@{
    var alert = (Dashboard.Models.Alert)TempData["alert"];

    string alertType = string.Empty;
    string alertMessage = string.Empty;

    if (alert != null)
    {
        alertType = alert.AlertType;
        alertMessage = alert.AlertMessage;
    }

}


<main>
    <div class="container-fluid">
        <!-- START: Breadcrumbs-->
        <div class="row ">
            <div class="col-12  align-self-center">
                <div class="sub-header mt-3 py-3 px-3 align-self-center d-sm-flex w-100 rounded">
                    <div class="w-sm-100 mr-auto"><h4 class="mb-0">Add Account Holder</h4></div>

                    <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                        <li class="breadcrumb-item">Account Holder</li>
                        <li class="breadcrumb-item">Add</li>

                    </ol>
                </div>
            </div>
        </div>
        <!-- END: Breadcrumbs-->

        @if (alertType == "error")
        {
            <div class="alert alert-danger" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }
        @if (alertType == "success")
        {
            <div class="alert alert-primary" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }

        <!-- START: Card Data-->
        <div class="row">
            <div class="col-12 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <form method="post" action="~/accountholder/add">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">First Name</label>
                                                <input type="text" class="form-control rounded" style="text-transform: uppercase;" name="FirstName" id="inputEmail4">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Last Name</label>
                                                <input type="text" class="form-control"  style="text-transform: uppercase;"id="inputPassword4" name="LastName">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Contact</label>
                                                <input type="number" class="form-control rounded" style="text-transform: uppercase;" id="inputEmail4" name="Contact">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Bank Account Number</label>
                                                <input type="text" class="form-control" id="inputPassword4" style="text-transform: uppercase;" name="BankAccountNumber">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Address</label>
                                            <input type="text" class="form-control"  style="text-transform: uppercase;"id="inputAddress" name="Address">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress2">Detail</label>
                                            <input type="text" class="form-control" style="text-transform: uppercase;" id="" name="Detail">
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputDate">Type</label>
                                                <select class="form-control" name="AccountHolderTypeID">
                                                    @foreach (var item in Model)
                                                    {
                                                        <option value="@item.Id">@item.Name</option>
                                                    }
                                                </select>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputDate">Date</label>
                                                <input type="text" value="@DateTime.Now" readonly name="CreatedOn" required class="form-control">
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: Card DATA-->
    </div>
</main>

