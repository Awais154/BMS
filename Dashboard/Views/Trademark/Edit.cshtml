@model DATA.Domains.Trademark

@{
    var alert = (Dashboard.Models.Alert)TempData["alert"];
    var AccountHolderTypes = (List<DATA.Domains.Trademark>)TempData["product"];
    string alertType = string.Empty;
    string alertMessage = string.Empty;

    if (alert != null)
    {
        alertType = alert.AlertType;
        alertMessage = alert.AlertMessage;
    }

    var id = Model.Id;
}


<main>
    <div class="container-fluid">
        <!-- START: Breadcrumbs-->
        <div class="row ">
            <div class="col-12  align-self-center">
                <div class="sub-header mt-3 py-3 px-3 align-self-center d-sm-flex w-100 rounded">
                    <div class="w-sm-100 mr-auto"><h4 class="mb-0">Edit Trade Mark</h4></div>
                    <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                        <li class="breadcrumb-item">Trade Marks</li>
                        <li class="breadcrumb-item">Edit</li>

                    </ol>

                </div>
            </div>
        </div>
        <!-- END: Breadcrumbs-->

        @if (alertType == "error")
        {
            <div class="alert alert-danger" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }
        @if (alertType == "success")
        {
            <div class="alert alert-primary" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }

        <!-- START: Card Data-->
        <div class="row">
            <div class="col-12 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Edit/Delete</h4>
                        <a class="btn btn-warning rounded-btn" href="~/trademark/Delete/@id" style="margin-left:970px"><i class="icon-trash"></i></a>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <form method="post" action="~/trademark/Update">
                                        <input type="text" value="@Model.Id" name="id" style="display:none">

                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Bussiness Name</label>
                                                <input type="text" value="@Model.BussinessName" class="form-control rounded" name="BussinessName" id="inputEmail4" placeholder="Bussiness Name">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Owner Name</label>
                                                <input type="text" value="@Model.OwnerName" class="form-control" id="inputPassword4" name="OwnerName" placeholder="Owner Name">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="inputEmail4">Contact</label>
                                                <input type="number" value="@Model.Contact" class="form-control rounded" id="inputEmail4" name="Contact" placeholder="Contact">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label for="inputPassword4">Address</label>
                                                <input type="text" value="@Model.Address" class="form-control" id="inputPassword4" name="Address" placeholder="">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Detail</label>
                                            <input type="text" value="@Model.Detail" class="form-control" id="inputAddress" name="Detail" placeholder="1234 Main St">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: Card DATA-->
    </div>
</main>

