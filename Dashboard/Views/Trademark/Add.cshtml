@model DATA.Domains.Trademark

@{
    var alert = (Dashboard.Models.Alert)TempData["alert"];

    string alertType = string.Empty;
    string alertMessage = string.Empty;

    if (alert != null)
    {
        alertType = alert.AlertType;
        alertMessage = alert.AlertMessage;
    }

}


<main>
    <div class="container-fluid">
        <!-- START: Breadcrumbs-->
        <div class="row ">
            <div class="col-12  align-self-center">
                <div class="sub-header mt-3 py-3 px-3 align-self-center d-sm-flex w-100 rounded">
                    <div class="w-sm-100 mr-auto"><h4 class="mb-0">Add Trade Mark & User</h4></div>

                    <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                        <li class="breadcrumb-item">Trade Mark</li>
                        <li class="breadcrumb-item">Add</li>

                    </ol>
                </div>
            </div>
        </div>
        <!-- END: Breadcrumbs-->

        @if (alertType == "error")
        {
            <div class="alert alert-danger" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }
        @if (alertType == "success")
        {
            <div class="alert alert-primary" role="alert">
                <strong>@alertType!</strong>  @alertMessage
            </div>
        }
    <form method="post" action="~/trademark/add">
        <!-- START: Card Data-->
        <div class="row">
            <div class="col-12 mt-4">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add Trade Mark</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">

                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">Bussiness Name</label>
                                            <input type="text" class="form-control rounded" style="text-transform: uppercase;" name="Trademark.BussinessName" id="inputEmail4">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputPassword4">Owner Name</label>
                                            <input type="text" class="form-control" style="text-transform: uppercase;" id="inputPassword4" name="Trademark.OwnerName">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">Contact</label>
                                            <input type="number" class="form-control rounded" id="inputEmail4" name="Trademark.Contact">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputDate">Date</label>
                                            <input type="text" value="@DateTime.Now" readonly name="Trademark.CreatedOn" required class="form-control">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="inputAddress2">Detail</label>
                                        <input type="text" class="form-control" id="" style="text-transform: uppercase;" name="Trademark.Detail">
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Add User</h4>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">First Name</label>
                                            <input type="text" class="form-control rounded" style="text-transform: uppercase;" name="Trademark.User[0].FirstName" id="inputEmail4">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputPassword4">Last Name</label>
                                            <input type="text" class="form-control" style="text-transform: uppercase;" id="inputPassword4" name="Trademark.User[0].LastName">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label for="inputEmail4">Email</label>
                                            <input type="email" class="form-control rounded" style="text-transform: uppercase;" name="Trademark.User[0].Email" id="inputEmail4">
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label for="inputPassword4">Password</label>
                                            <input type="password" class="form-control" style="text-transform: uppercase;" id="inputPassword4" name="Trademark.User[0].Password">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Save</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- END: Card DATA-->
    </form>
    </div>
</main>

